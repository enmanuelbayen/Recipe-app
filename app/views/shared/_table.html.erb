<table>
  <thead>
    <tr>
      <th>Food</th>
      <th><%= column_name2 %></th>
      <th><%= column_name3 %></th>
      <th><%= column_name4 %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <% if controller_name == 'foods'%>
            <td><%= item.name %></td>
            <td class=""> <%=item.measurement_unit%> </td>
            <td class=""> $<%=item.price%> </td>
            <td class=""> <%=item.quantity%> </td>
        <% else %>
            <td><%= item.food.name %></td>
            <td class=""> <%=item.food.measurement_unit %> </td>
            <td class=""> <%= item.quantity%><%= item.food.measurement_unit%> </td>
            <td class=""> $<%= item.calculate_value_by_quantity %> </td>
        <% end %>
        <td>
          <% if actions.include?(:modify) %>
            <%= link_to "Modify", modify_path %> |
          <% end %>
          <% if actions.include?(:remove) %>
            <%= link_to "Remove", food_path(item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>